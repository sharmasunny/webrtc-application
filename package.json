{
  "name": "webrtc-app",
  "version": "1.0.0",
  "description": "webrtc simple application",
  "scripts": {
    "start": "npm run serve",
    "dev": "nodemon --watch './src/**/*.ts' --exec ts-node ./src/index.ts",
    "build": "tsc",
    "postinstall": "npm run build",
    "serve": "node dist/index.js",
    "test": "jest src",
    "watch-node": "nodemon dist/index.js",
    "watch-ts": "tsc -w"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/socket.io": "^2.1.4",
    "nodemon": "^1.19.4",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "express": "^4.17.1",
    "socket.io": "^2.3.0"
  }
}
